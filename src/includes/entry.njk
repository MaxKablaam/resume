<article class="entry">
    <div class="entry__header">
        {% if entries == collections.projects %}
            {% if entry.data.projectUrl %}
                <a href="{{ entry.data.projectUrl}}" target="_blank" rel="noopener noreferrer">
                    <h3 class="entry__project-title p-name">{{ entry.data.projectTitle }}
                    {% if entry.data.releaseDate %}
                        <span class="entry__project-release-date entry__time" datetime="{{ entry.data.releaseDate | dateToFormat("yyyy-MM-dd") }}">{{entry.data.releaseDate | dateToFormat("yyyy")}}</span>
                    {% endif %}
                    </h3>
                </a>
            {% else %}
                <h3 class="entry__project-title p-name">{{ entry.data.projectTitle }}
                {% if entry.data.releaseDate %}
                    <span class="entry__project-release-date entry__time" datetime="{{ entry.data.releaseDate | dateToFormat("yyyy-MM-dd") }}">{{entry.data.releaseDate | dateToFormat("yyyy")}}</span>
                {% endif %}
                </h3>
            {% endif %}
            {% if entry.data.role %}
                <p class="entry__project-role">{{ entry.data.role }}</p>
            {% endif %}
        {% else %}
            <h3 class="entry__title p-name">{{ entry.data.title }}</h3>
        {% endif %}


        {% if entries != collections.projects %}
            {% if entry.data.start %}
            <p class="entry__time">
                <time class="dt-start" datetime="{{ entry.data.start | dateToFormat("yyyy-MM-dd") }}">
                    {{ entry.data.start | dateToFormat("MM/yyyy") }}
                </time>
                <span>&ndash;</span>
                {% if entry.data.end %}
                    <time class="dt-end" datetime="{{ entry.data.end | dateToFormat("yyyy-MM-dd") }}">
                        {{ entry.data.end | dateToFormat("MM/yyyy") }}
                    </time>
                {% else %}
                    <span>{{ strings.labels.present }}</span>
                {% endif %}
            </p>
            {% endif %}
        {% endif %}

        {% if entry.data.dateReceived %}
        <p class="entry__time">
            <time class="dt-start" datetime="{{ entry.data.dateReceived | dateToFormat("yyyy-MM-dd") }}">
                {{ entry.data.dateReceived | dateToFormat("MM/yyyy") }}
            </time>
        </p>
        {% endif %}

        {% if entry.data.organization %}
            <p class="entry__organization p-org h-card">
                {% if entry.data.organizationUrl %}
                    <a href="{{ entry.data.organizationUrl }}" class="p-name u-url" target="_blank" rel="noopener noreferrer">{{ entry.data.organization }}</a>
                {% else %}
                    <span class="p-name">{{ entry.data.organization }}</span>
                {% endif %}
                {% if entry.data.location %}
                    <span aria-hidden="true">&middot;</span>
                    <span class="p-location">{{ entry.data.location }}</span>
                {% endif %}
            </p>
        {% endif %}
    </div>

    {% if entry.templateContent %}
        <div class="entry__content p-summary">
            {{ entry.templateContent | safe }}
        </div>
    {% endif %}
</article>